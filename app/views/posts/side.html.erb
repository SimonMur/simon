<div class="container-fluid">

    <%=render 'layouts/carousel' %>
    
    <% @posts.each do |post| %>
   <div class= 'float'>
      <div class="text-center">
         <%= cl_image_tag post.picture_url :transformation => [{:height => 120, :width => 120, :crop => "thumb", :gravity => "face", :radius => 5}] %>
        <h2><%= post.title %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div class="text-center">
        <%= link_to "Read more.....", post_path(post) %>
      </div>
      <br>
</div>
    <% end %>
  </div>
  

