<% provide(:title, "Home") %>

<div class="container-fluid">

   <div class="row">
    <div class= "col-sm-12">
      

    <div class="col-sm-8" >
  <%=render 'layouts/carousel'%>
 <h1 style="font-size: 30px; text-align: center;
  color: rgb(128, 100, 162);
  font-family: Times New Roman, Georgia, Serif;
  font-weight: bold;">Trending Video</h1>
  <div class='video'>
    <div class="embed-responsive embed-responsive-16by9">
  <iframe title="YouTube video player" class="embed-responsive-item" class="youtube-player" type="text/html" 
width="640" height="390" src="https://www.youtube.com/embed/yWYHHNADK04"
frameborder="0" allowFullScreen></iframe>
</div>
</div>
<h1 style="font-size: 30px; text-align: center;
  color: rgb(128, 100, 162);
  font-family: Times New Roman, Georgia, Serif;
  font-weight: bold;"> Trending topic</h1>
 
     <% @posts.find(1) do |post| %>
      <table >
    <tr>
   <td> <%= cl_image_tag post.picture_url :transformation => [{:height => 200, :width => 350, :crop => "thumb", :responsive_placeholder => "blank", :secure => true, :radius => 0}] %></td>
     <td><%= link_to post.title, post_path(post) %>
      <p><%=  post.description %><p></td>
   <td>
    
     <h4>Rated</h4>
    <div class="best-product-rating">
                      <a href="#"><i class="fa fa-star"></i></a>
                      <a href="#"><i class="fa fa-star"></i></a>
                      <a href="#"><i class="fa fa-star"></i></a>
                      <a href="#"><i class="fa fa-star"></i></a>
                      <a href="#"><i class="fa fa-star"></i></a>
                    </div>
                    <hr />
                     <%= link_to "Read more.....", post_path(post), class: "btn btn-warning btn-xs" %>
                     <hr>
                     <p class="timestamp" style="color:rgba(0, 0, 0, 0.5); font-size: 9px;">

    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </p>
</td>
</tr>
   </table> 
 <hr />
    <% end %>
  
<h1 style="font-size: 30px;text-align: center;
  color: rgb(128, 100, 162);
  font-family: Times New Roman, Georgia, Serif;
  font-weight: bold;">Hot posts</h1>

     <% @posts.find_each(start: 6, finish: 9) do |post| %>
  
    <table >
    <tr>
        <td> <%= cl_image_tag post.picture_url :transformation => [{:height => 120, :width => 110, :crop => "thumb", :secure => true, :class=>"img-responsive", :radius => 0}] %></td>
    
       <td> <%= link_to post.title, post_path(post) %>
        <p><%=  post.description %><p>
           <%= link_to "Read more.....", post_path(post), class: "btn btn-warning btn-xs" %>
           <p class="timestamp" style="color:rgba(0, 0, 0, 0.5); font-size: 9px;">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </p>
       </td>
 
      
       
  </tr>
   </table> 
 <hr />

    <% end %>
     

   
</div>
    <div class="col-sm-4">
     <%= render @posts %>
  
</div>

     </div>
